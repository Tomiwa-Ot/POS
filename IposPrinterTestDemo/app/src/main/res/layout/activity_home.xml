<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/gainsboro"
    tools:context=".HomeActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/credit_card"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:onClick="copy"
        app:cardBackgroundColor="@color/purple"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:text="0.000 BTC"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:text="1zxxzxzxzxzxzxzxzxzxzxzxzxzxzxcd"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="10dp"
                android:text="Olaide Bishop"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/tap_to_copy"
        android:gravity="center"
        android:layout_below="@id/credit_card">

        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="@string/copyAddress"
            android:textColor="@color/purple"
            android:textSize="15sp"
            android:textAlignment="center"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_container"
        android:layout_below="@+id/tap_to_copy"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buy_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="buy"
                        android:background="@drawable/home_buttons"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:text="@string/buy" />

                    <Button
                        android:id="@+id/send_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="send"
                        android:background="@drawable/home_buttons"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:text="@string/send" />

                    <Button
                        android:id="@+id/receive_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="receive"
                        android:background="@drawable/home_buttons"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:text="@string/receive" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/history_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="history"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/home_buttons"
                        android:text="@string/history" />


                    <Button
                        android:id="@+id/logout_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="logout"
                        android:background="@drawable/home_buttons"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:text="@string/logout" />

                    <Button
                        android:id="@+id/printer_test_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="testPrint"
                        android:textAllCaps="false"
                        android:background="@drawable/home_buttons"
                        android:textColor="@color/white"
                        android:text="@string/print" />


                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</RelativeLayout>

